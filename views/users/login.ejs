<% layout("/layouts/boilerplate") %>  <!-- Use base layout -->

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-3">Login</h1>

    <div class="col-6 offset-3">
        <!-- Login form -->
        <form action="/login" method="POST" class="needs-validation" novalidate>

            <!-- Username input -->
            <div class="mb-3">  
              <label for="username" class="form-label"><b>Username</b></label>
              <input 
                name="username"
                id="username"
                type="text"
                class="form-control"
                required
              />
            </div>

            <!-- Password input -->
            <div class="mb-3">  
              <label for="password" class="form-label"><b>Password</b></label>
              <input 
                name="password"
                id="password"
                type="password"
                class="form-control"
                required
              />
            </div>

            <!-- Submit button -->
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>
