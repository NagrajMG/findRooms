<% layout("/layouts/boilerplate") %> <!-- Base layout extension -->

<style>
    /* Container for filter buttons */
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-around;
    }

    /* Style for individual filter option */
    .filter {
        text-align: center;
        margin-inline: 1rem;
        margin-top: 1rem;
        opacity: 0.7;
        transition: all 0.3s ease-in-out;
        cursor: pointer;
    }

    .filter:hover {
        opacity: 1;
    }

    .filter p {
        font-size: 0.8rem;
    }

    /* Tax info hidden by default, toggled via switch */
    .tax-info {
        display: none;
    }

    /* Container for toggle switch */
    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
    }
</style>

<!-- Grid layout for displaying listings -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
        <!-- Each listing card wrapped in a link -->
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <!-- Listing image -->
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <!-- Title and price -->
                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i> <!-- Hidden unless toggled -->
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>
